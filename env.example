# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/codetracker"
DIRECT_URL="postgresql://username:password@localhost:5432/codetracker"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
# GitHub
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_TOKEN="your-github-personal-access-token"

# Google
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Discord
DISCORD_CLIENT_ID="your-discord-client-id"
DISCORD_CLIENT_SECRET="your-discord-client-secret"

# Email Configuration
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@codetracker.com"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# File Upload Configuration
UPLOAD_MAX_SIZE="10485760" # 10MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,text/plain,application/pdf"

# Security Configuration
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key"

# Monitoring and Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

# Feature Flags
ENABLE_GAMIFICATION="true"
ENABLE_COLLABORATION="true"
ENABLE_ANALYTICS="true"
ENABLE_GITHUB_INTEGRATION="true"

# Rate Limiting
RATE_LIMIT_WINDOW="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-secret"

# CDN Configuration
CDN_URL="https://cdn.codetracker.com"

# Development/Production Flags
NODE_ENV="development"
DEBUG="false"
LOG_LEVEL="info"

# Database Connection Pool
DB_POOL_MIN="2"
DB_POOL_MAX="10"

# Session Configuration
SESSION_MAX_AGE="2592000" # 30 days
SESSION_UPDATE_AGE="86400" # 1 day

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# File Storage
STORAGE_PROVIDER="local" # local, aws-s3, cloudinary
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Real-time Configuration
SOCKET_IO_CORS_ORIGIN="http://localhost:3000"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING="true"
PERFORMANCE_SAMPLE_RATE="0.1"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_PUSH_NOTIFICATIONS="false"

# API Configuration
API_RATE_LIMIT="1000" # requests per hour
API_TIMEOUT="30000" # 30 seconds

# Cache Configuration
CACHE_TTL="3600" # 1 hour
CACHE_MAX_SIZE="100"

# Logging Configuration
LOG_FORMAT="json"
LOG_FILE="logs/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES="5"

# Health Check Configuration
HEALTH_CHECK_INTERVAL="30000" # 30 seconds
HEALTH_CHECK_TIMEOUT="5000" # 5 seconds

# Maintenance Mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# Security Headers
SECURITY_HEADERS_ENABLED="true"
CSP_REPORT_URI="https://codetracker.report-uri.com/r/d/csp/enforce"

# Database Migration
AUTO_MIGRATE="false"
MIGRATION_TIMEOUT="300000" # 5 minutes

# Error Reporting
ERROR_REPORTING_ENABLED="true"
ERROR_REPORTING_LEVEL="error"

# User Analytics
ANALYTICS_ENABLED="true"
ANALYTICS_PRIVACY_MODE="true"

# Content Moderation
CONTENT_MODERATION_ENABLED="true"
MODERATION_API_KEY=""

# Search Configuration
SEARCH_PROVIDER="database" # database, elasticsearch, algolia
ELASTICSEARCH_URL=""
ALGOLIA_APP_ID=""
ALGOLIA_API_KEY=""

# Queue Configuration
QUEUE_PROVIDER="bull" # bull, agenda
REDIS_QUEUE_URL="redis://localhost:6379"

# WebSocket Configuration
WEBSOCKET_ENABLED="true"
WEBSOCKET_PORT="3001"

# SSL Configuration
SSL_ENABLED="true"
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# Load Balancing
LOAD_BALANCER_ENABLED="false"
LOAD_BALANCER_ALGORITHM="round-robin"

# Auto-scaling
AUTO_SCALE_ENABLED="false"
MIN_INSTANCES="1"
MAX_INSTANCES="10"

# Resource Limits
MEMORY_LIMIT="512m"
CPU_LIMIT="1000m"

# Monitoring Endpoints
METRICS_ENDPOINT="/metrics"
HEALTH_ENDPOINT="/health"
READINESS_ENDPOINT="/ready"

# Development Tools
ENABLE_DEV_TOOLS="true"
ENABLE_PROFILING="false"
ENABLE_DEBUG_MODE="false"
